<%- include('partials/header_landing.ejs'); %>
        <div class="d-flex justify-content-around" id="backg">
            <img src="logo.png" class="img-fluid w-50 mt-4">
        </div>
        
        <form method="post" action="/poke" class="row mt-3 d-flex justify-content-center">
            <div class = "col-md-5 col-8 p-0 mt-md-5 mt-4">
                <input type="text" name="searchbar" id="searchbar" class="form-control" placeholder="Enter a Pokémon..." required>
